<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeoHandbook" parent="Theme.MaterialComponents">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_a400</item>
        <item name="colorPrimaryVariant">@color/green_a700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_700</item>
        <item name="colorSecondaryVariant">@color/pink_900</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="colorPrimaryDark">@color/green_900</item>
        <item name="android:statusBarColor">@color/green_900</item>
        <item name="colorSurface">@color/green_900</item>
        <!-- Customize your theme here. -->
        <item name="colorOutline">?attr/colorPrimaryDark</item>
        <item name="colorSecondaryContainer">?attr/colorPrimaryDark</item>
    </style>
</resources>